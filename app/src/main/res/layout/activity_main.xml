<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@color/primary_text_default_material_light">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="@color/primary_text_default_material_light">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/accounts"
                    android:text="Accounts"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="bottom|center"
                    android:id="@+id/textAccounts"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/incom"
                    android:text="Income"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/textIncome"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/efffe"
                    android:text="Expense"
                    android:textColor="@color/abc_primary_text_disable_only_material_dark"
                    android:gravity="bottom|center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/textExpense"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/primary_text_default_material_light">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/overview"
                android:text="Overview"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/abc_primary_text_material_dark"
                android:gravity="top|center"
                android:id="@+id/textOverview"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/budget"
                android:text="Budget"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/text_budget"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_margin="2dp"
            android:background="@drawable/imac"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="0%"
                    android:textSize="35dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textPercent"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Budget: 0"
                    android:textColor="#ffffff"
                    android:id="@+id/textBudget"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Spent: 0"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:id="@+id/textSpent"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/primary_text_default_material_light">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/bills2"
                android:id="@+id/textBills"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/categories"
                android:text="Category"
                android:textStyle="bold"
                android:textColor="@color/abc_primary_text_material_dark"
                android:gravity="bottom|center"
                android:id="@+id/textCatagory"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/contacts"
                android:text="Contact"
                android:gravity="bottom|center"
                android:textColor="@color/abc_primary_text_material_dark"
                android:textStyle="bold"
                android:id="@+id/textContact"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/primary_text_default_material_light">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/floatingplusicon"
                android:text="Add Income"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="bottom"
                android:id="@+id/textAddIncome"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/imageplus"
                android:text="Add Expense"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:id="@+id/textAddExpense"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/mynumbersicon"
                android:text="Add Accounts"
                android:gravity="bottom"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/textAddAcounts"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/product"
                android:text="Add Budget"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/textAddBudget"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/primary_text_default_material_light">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/sample"
                android:text="Search"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="bottom|center"
                android:id="@+id/textSearch"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/phone_graph"
                android:text="Statistics"
                android:textColor="#ffffff"
                android:gravity="bottom|center"
                android:id="@+id/textStatistics"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/metro"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="bottom"
                android:text="Calculator"
                android:id="@+id/textCalc"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/hel_p"
                android:text="Help"
                android:textStyle="bold"
                android:gravity="top|center"
                android:textColor="#ffffff"
                android:id="@+id/textHelp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>