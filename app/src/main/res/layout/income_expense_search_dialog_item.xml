<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content" android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Search By Day"
        android:textSize="20dp"
        android:id="@+id/textSearchByDay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Search By Month"
        android:textSize="20dp"
        android:id="@+id/textSearchByMonth"
        android:layout_below="@+id/textSearchByDay"
        android:layout_alignLeft="@+id/textSearchByDay"
        android:layout_alignStart="@+id/textSearchByDay"
        android:layout_alignRight="@+id/textSearchByDay"
        android:layout_alignEnd="@+id/textSearchByDay" />


</RelativeLayout>